{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react",
    "baseUrl": ".",
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "jotai-urql": ["./src"]
    }
  },
  "include": [
    "vite.config.ts",
    "playwright.config.ts",
    "src",
    "tests",
    "examples",
    "webpack.config.js"
  ]
}
